@article{montane_responsabilite_2001,
	title = {Responsabilité et complexité territoriale : la responsabilisation des élus politiques se heurte à l'état actuel des découpages électoraux et institutionnels locaux},
	volume = {19},
	issn = {0758-1726},
	shorttitle = {Responsabilité et complexité territoriale},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_2001_num_19_4_2689},
	doi = {10.3406/pomap.2001.2689},
	abstract = {La mise enjeu de la responsabilité des autorités publiques infra-nationales se heurte à des problèmes de territoires, en particulier au plan politique. Un même acteur politique ou une même collectivité font actuellement l'objet de tentatives de responsabilisation qui s'inscrivent à des niveaux différents, dans des limites géographiques qui ne coïncident pas, avec tous les risques de contradictions qui en découlent. Le réajustement des différents territoires du mésogouvemement, autrement dit la concordance des espaces de l'action publique, de la représentation démocratique (circonscriptions électorales) et de l'institution (découpages administratifs), semble nécessaire à un plein exercice de la responsabilité des autorités publiques. La complexité territoriale a cependant ses raisons, que les élus politiques n'ignorent pas. La prise en compte des intérêts au maintien de l'absence d'ajustement des territoires conduit à développer une vision réaliste de la responsabilisation des autorités infra-nationales. Toutefois, renoncer à l'utopie d'une carte territoriale transparente et simple ne diminue en rien la nécessité de l'établissement de relations territoriales et de partages de rôles mieux adaptés aux enjeux de l'action publique et de la démocratie. "Le politique est toujours face à un territoire dans lequel il exerce un pouvoir en droit défini comme une responsabilité, qu'il soit élu ou nommé. " (Etchegoyen, 1993).},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Montane, Michel-Alexis},
	year = {2001},
	pages = {25--44},
}

@article{serve_information_2001,
	title = {Information comptable des collectivités locales et évaluation du risque financier : une comparaison européenne},
	volume = {19},
	issn = {0758-1726},
	shorttitle = {Information comptable des collectivités locales et évaluation du risque financier},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_2001_num_19_4_2688},
	doi = {10.3406/pomap.2001.2688},
	abstract = {L'information comptable publiée par une collectivité locale contribue à l'évaluation de son risque de défaillance en tant que vecteur de réduction de l'asymétrie d'information entre la collectivité locale et ses pourvoyeurs de fonds. Contrairement à l'entreprise, la gestion de l'information comptable par la collectivité locale est limitée en raison de l'existence d'un cadre réglementaire strict. C'est ici le législateur qui dispose d'un pouvoir déterminant pour réduire l'asymétrie d'information, d'où la pleine légitimité de l'analyse institutionnelle dans le processus d'évaluation du risque de défaillance locale. Cet article présente une comparaison européenne du cadre institutionnel qui régit l'information comptable des collectivités locales dans l'optique de son utilisation par les pourvoyeurs de fonds à des fins d'évaluation de risque. L'objectif est de répondre à la question : peut-on pratiquer une analyse financière locale de détection du risque dans un contexte européen au vu du niveau d'harmonisation des politiques comptables ?.},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Serve, Stéphanie},
	year = {2001},
	pages = {1--23},
}

