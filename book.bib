	journal = {Politiques et management public},
	author = {Gallié, Émilie-Pauline and Glaser, Anna and Lefevre, Philippe and Pallez, Frédérique},
	month = mar,
	year = {2012},
	pages = {573--590},
}

@article{brami_reformes_2012,
	title = {Réformes de l’hôpital, crise à l’hôpital : une étude des liens entre réformes hospitalières et absentéisme des personnels soignants},
