@article{lafay_les_1985,
	title = {Les entreprises publiques selon la théorie économique de la politique},
	volume = {3},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_2_1839},
	doi = {10.3406/pomap.1985.1839},
	abstract = {L'économie politique traditionnelle s'intéresse peu aux coûts d'intervention de l'Etat et adopte le plus souvent une optique normative. Elle a donc beaucoup de mal à expliquer les raisons positives de l'appropriation publique et à analyser le fonctionnement effectif des entreprises publiques. On examine ici dans quelle mesure les analyses regroupées sous le vocable de «théorie économique de la politique» sont susceptibles de combler cette lacune. La théorie économique de la politique permet tout d'abord un examen systématique des avantages et coûts politiques de la production publique et ceci met en relief le rôle déterminant Joué par les motifs de revenu, de distribution et de stabilisation, alors que la théorie traditionnelle insiste à tort sur les motifs d'affectation des ressources. La théorie économique de la politique permet aussi de bien poser le problème du contrôle de l'entreprise publique par le gouvernement, soit en le fondant sur des n relations de confiance» avec la bureaucratie, soit en maintenant l'entreprise publique dans un environnement concurrentiel. En concentrant l'attention sur le comportement des groupes qui sont partie prenante dans l'entreprise publique, la théorie économique de la politique permet enfin d'analyser de façon plus intéressante le problème de son fonctionnement effectif.},
	language = {fr},
	number = {2},
