	number = {3},
	urldate = {2020-06-25},
	journal = {Politiques et management public},
	author = {Monnier, Éric and Spenlehauer, Vincent},
	year = {1992},
	pages = {61--82},
}

@article{hassenteufel_representation_1992,
	title = {Représentation des médecins et redéfinition de l'action publique : la régulation des dépenses de médecine ambulatoire en {France}, en {R}.{F}.{A}. et en {Autriche}},
