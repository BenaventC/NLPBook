@article{lodge_beyond_2005,
	title = {Beyond stereotype : comparing {British} and {German} bureaucracies in the age of {NPM}},
	volume = {23},
	issn = {0758-1726},
	shorttitle = {Beyond stereotype},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_2005_num_23_4_2298},
	doi = {10.3406/pomap.2005.2298},
	abstract = {On dit que nous vivons à l'ère du "nouveau management public" (NPM). Les cas de l'Allemagne et de la Grande-Bretagne sont souvent pris comme des exemples opposés d'une gestion "NPM", le premier étant souvent défini comme un "retardataire", le second comme un "leader de la réforme". Cet article utilise la perspective des "marchés publics" afin de fournir une perspective plus différenciée sur ces deux États. Il le fait en deux étapes. Tout d'abord, cet article suggère qu'au fil du temps, l'Allemagne a connu un nombre beaucoup plus important de conjectures "majeures" dans ses négociations sur le service public que le Bhoutan. Deuxièmement, en évaluant les réformes dans les trois dimensions du "marché de la fonction publique", à savoir la récompense, la compétence, ainsi que la loyauté et la responsabilité, cet article remet également en question les approximations de premier niveau établies pour les fonctions publiques allemande et britannique en soulignant certaines évolutions qui vont à l'encontre des croyances largement répandues concernant les deux systèmes administratifs nationaux et les caractéristiques des réformes administratives. Les réformes contemporaines ont produit une multiplication et une complication des négociations plutôt qu'un marché "managehalist". Sur la base de ces conclusions, cet article soutient qu'il est temps d'aller au-delà du tarif standard de l'industrie du "NPM".},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Lodge, Martin},
	year = {2005},
	pages = {19--32},
}

@article{marrel_entre_2005,
	title = {Entre action et élection : les impératifs de la gestion publique dans la codification temporelle des mandats},
	volume = {23},
	issn = {0758-1726},
	shorttitle = {Entre action et élection},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_2005_num_23_4_2297},
	doi = {10.3406/pomap.2005.2297},
	abstract = {Cet article s'intéresse à la question des temporalités politiques. Il ne s'agit pas d'opposer, comme cela a été souvent fait, les temporalités électorales aux temporalités décisionnelles. Mais bien de montrer que la réglementation de la durée ou de la rééligibilité des mandats politiques renvoie à des manières d'envisager le rôle, la place et la légitimité des élus dans l'action publique. Les propos s'appuient sur deux enquêtes distinctes réalisées l'une sur l'adoption de la loi française du 10 avril 1929, allongeant le mandat municipal de quatre à six ans, l'autre menée sur le mouvement contemporain des « term limits » et la réduction légale de la rééligibilité des parlementaires et des élus locaux aux Etats-Unis. Le détour par les « terni limits » états- uniens nourrit l'hypothèse d'un passage : le passage du temps long de l'administration publique au temps court du management public, de l'expérience à la rotation, de mandats longs et rééligibles à des mandats courts et non-renouvelables, du compromis entre compétence et élection à l'impératif participatif.},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Marrel, Guillaume and Payre, Renaud},
	year = {2005},
	pages = {1--17},
}

@article{souche_levolution_2006,
	title = {De l'évolution pragmatique du droit face aux réalités économiques. {La} concurrence des droits sur le domaine public},
	volume = {24},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_2006_num_24_1_2312},
	doi = {10.3406/pomap.2006.2312},
	abstract = {Payer pour pouvoir plus librement se déplacer dans le centre ville, tel est aujourd'hui le quotidien des Londoniens. L'objet de ce papier sera de répondre à la question suivante : la liberté de se déplacer est-elle indissociable de la gratuité d'usage de la voirie ? La réponse apportée à cette question nous permettra de soutenir que lorsque les contraintes économiques le justifient, une gestion pragmatique du domaine public implique une adaptation des dispositifs juridiques. En soi cette thèse n'est pas nouvelle (notamment depuis les travaux de Posner) mais notre originalité est de l'appliquer au domaine des transports et de montrer qu'il existe une concurrence des droits sur le domaine public. Les travaux de Ferry et Renaut (1996) nous permettront d'abord de revenir sur les fondements en philosophie politique de la liberté et de la gratuité d'usage de la route. Puis, par une lecture historique et critique des dispositifs juridiques relatifs aux voiries, nous montrerons que la " gestion " pragmatique du domaine public s'est accompagnée de la réduction de la gratuité d'usage de la voirie pour garantir la liberté de se déplacer. Enfin, et plus récemment, à travers la création des péages autoroutiers, de la L.O.T.I. (Loi d'Orientation sur les Transports Intérieurs) et de la lutte contre la congestion urbaine, nous insisterons sur cet usage pragmatique du droit comme outil de politique publique et sur le caractère de priorité conféré à la liberté.},
	language = {fr},
	number = {1},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Souche, Stéphanie},
	year = {2006},
	pages = {99--115},
}

@article{richet_recours_2006,
