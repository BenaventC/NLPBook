	journal = {Politiques et management public},
	author = {de Maillard, Jacques},
	year = {2006},
	pages = {23--39},
}

@article{dumond_action_2006,
	title = {L'action publique entre la planification et la contractualisation négociée : la perception des administrateurs des hôpitaux},
