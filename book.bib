@article{marsaud_recul_1995,
	title = {Recul, redéploiement ou déploiement du management dans les communes ? {Questions} et tentatives de réponses à partir de l'expérience de {Saint}-{Denis}},
	volume = {13},
	issn = {0758-1726},
	shorttitle = {Recul, redéploiement ou déploiement du management dans les communes ?},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1995_num_13_3_2069},
	doi = {10.3406/pomap.1995.2069},
	abstract = {Depuis quelques années, on assiste dans les collectivités territoriales à une certaine évolution de la gestion dont les caractéristiques et la tendance par rapport à la période passée peuvent laisser penser à une réorientation. Le discours et les principes managériaux classiques des années 1980 semblent céder du terrain à une gestion apparemment moins rigoureuse, plus souple, plus pragmatique, plus "politique". Le souci du coût des activités ou des équipements compose plus qu'il y a quelques années avec une volonté de mieux répondre aux attentes et aux préoccupations des usagers. La gestion du personnel est redevenue plus "sociale", certains diront plus laxiste. Fruit de la décentralisation, de la crise de la politique et signe des temps, les "pratiques démocratiques" des élus locaux se sont développées, tant avec les administrés qu'avec les personnels. L'association plus étroite de ces partenaires à la définition des objectifs et à leur mise en œuvre génère au niveau des politiques et de l'administration de nouvelles méthodes de travail, de nouvelles relations. Les cadres de direction, principalement mobilisés jusqu'alors sur le management interne, sont de plus en plus interpellés par l'externe, que cela s'appelle développement local ou politique de la ville. Dans un environnement économique difficile (mais est-ce seulement pour cela ?) le service public commence à réafficher fièrement ses valeurs. Est-ce là le résultat d'un simple effet de balancier, d'une réaction à certains excès du management en milieu public, d'une régression dans un contexte dépressif, d'une adaptation à la crise, ou bien les signes d'une phase nouvelle, d'une maturation du management public, d'une émergence de ses éléments spécifiques, de l'affirmation du citoyen fonctionnaire ou de l'usager citoyen comme acteur du management ? Mais cette dimension humaniste, démocratique, politique du management, pour réelle qu'elle soit, ne vient-elle pas servir d'alibi, de couverture à un essoufflement des pratiques managériales, et justifier le retour à une certaine facilité, dans un contexte où le secteur privé a un genou à terre ? Comment mieux prendre en compte les avancées du management public local sans remettre en cause les acquis des périodes passées ?.},
	language = {fr},
	number = {3},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Marsaud, Jacques},
	year = {1995},
	pages = {225--247},
}

