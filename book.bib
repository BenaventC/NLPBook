@article{malgorn_regalien_2019,
	series = {{PMP}},
	title = {Le régalien et la mer},
	volume = {36},
	doi = {10.3166/pmp.36. 2019.0022},
	abstract = {La maîtrise des mers a connu un processus séculaire de régulation, encore en évolution, et qui peut éclairer sur le management des nouveaux espaces en exploration ou en créa- tion comme le cyberespace. Espace de guerre, de commerce et de piraterie, la mer fut le champ où s’établissent le partage du monde et la constitution des empires, dans un jeu de relations entre États et compagnies de commerce. De voie de communication qui au- rait pu se satisfaire d’un principe de liberté de la mer, cet espace a vite été reconnu pour ses ressources, de la pêche jusqu’au pétrole et autres minerais, ressources rares et dispu- tées. Les pollutions marines ont aussi mis en évidence le besoin de protection de l’envi- ronnement marin tandis que les migrations massives par mer mettaient à l’épreuve le droit international de la mer et les relations entre États et organisations internationales. L’exercice de la souveraineté sur la mer repose sur des moyens nationaux dans le cadre de politiques maritimes plus ou moins intégrées au niveau national et européen et souvent décalées par rapport aux enjeux. L’espace maritime fait l’objet de zonages complexes établis sous l’égide des Nations Unies. Mais le principe n’a pas changé depuis la portée de canon. Un État ne peut revendiquer une souveraineté en mer que sur des espaces où il démontre sa capacité à assurer l’ordre, la sécurité et la protection des hommes et des ressources.},
	number = {4},
	author = {Malgorn, Bernadette},
	month = nov,
	year = {2019},
	pages = {413--430},
}

@article{saint_jonsson_conduire_2019,
	series = {{PMP}},
	title = {Conduire le changement là où règne l’esprit de corps {Le} cas des sapeurs-pompiers face à la toxicité des fumées},
	volume = {36},
	doi = {10.3166/pmp.36. 2019.0023},
	abstract = {Cet article est une étude exploratoire visant à comprendre comment les pilotes d’orga- nisations publiques relevant du domaine régalien, donc marquées par l’esprit de corps, interprètent et conduisent les changements attendus sur le sujet de la prévention des risques professionnels. Au travers une étude de cas sur la toxicité des fumées dans le mé- tier des sapeurs-pompiers, nous montrons que le sujet de la prévention des risques est particulier du fait de l’incertitude portant sur les dangers réels et l’efficacité des mesures. Ceci implique une posture de la part des directions qui relève davantage de la médiation que de la conduite d’un changement actif. Dans ce cadre, l’esprit de corps les poussera à réduire les dissonances relatives à la perception du risque dans leurs équipes et à recher- cher un statu quo sur la conduite à tenir et les mesures à mettre en place. En outre l’esprit de corps ne protège pas le domaine du régalien des logiques économiques et de l’évo- lution de la société qui modèleront au moins en partie la perception des risques et les mesures qui doivent être prises.},
	number = {3},
	author = {Saint Jonsson, Anais and Agopian, Philippe and Turc, Emil},
	month = nov,
	year = {2019},
	pages = {389--412},
}

@article{favreau_transnational_2019,
	series = {{PMP}},
	title = {Le transnational : du symptôme à la cause de la crise de l’État régalien},
	volume = {36},
	doi = {10.3166/pmp.36. 2019.0021},
	abstract = {La notion de droits régaliens peut être définie selon deux points de vue. En premier lieu, selon une conception large, les droits régaliens sont les droits exercés par le souverain. En second lieu, selon une conception spécifique au droit international classique, les droits régaliens doivent être conçus comme les droits de l’État. La critique de l’État, récurrente depuis le XIXe siècle, s’accompagne du retour à une conception large du régalien. À par- tir des années 1990, le développement de régimes transnationaux peut être considéré comme l’un des symptômes de ce retour à une conception large du régalien. Aujourd’hui, ces régimes transnationaux, occupant désormais une place importante dans de nom- breux domaines, sont aussi la cause d’un approfondissement de la crise de l’État régalien. C’est la nature même de l’État régalien et de la distinction entre sphères publique et pri- vée qui est ici en mutation.},
	number = {4},
	author = {Favreau, Florian},
	month = dec,
	year = {2019},
	pages = {371--387},
}

@article{bastiege_management_2019,
	series = {{PMP}},
	title = {Management des ressources naturelles, le retour de l’État régalien ?},
	volume = {36},
	doi = {10.3166/pmp.36. 2019.0019},
	abstract = {Les prétentions des entreprises transnationales à s’affranchir des règles de droit d’origine étatique et des juridictions nationales sont particulièrement anciennes et appuyées dans le domaine du management des ressources naturelles. Ce fait traduit-il un affaiblissement de l’État et une réduction des marges de manœuvre étatiques dans ce domaine ? S’inter- roger sur les mutations, non uniquement de l’État, mais, plus spécifiquement, du réga- lien, en prenant pour exemple le différend emblématique opposant le pétrolier Chevron à certaines populations équatoriennes entre 1964 et 2019 nous permet d’aborder cette question sous un angle original. Dans ce cadre, il apparaît que l’État régalien, malgré les mutations récentes du rôle de l’État, constitue, aujourd’hui, l’acteur majeur du manage- ment des ressources naturelles.},
	number = {4},
	author = {Bastiège, Marine and Favreau, Florian},
	month = dec,
	year = {2019},
