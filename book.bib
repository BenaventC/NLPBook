@article{ruffat_entreprise_1985,
	title = {L'entreprise publique dans la dialectique plan/marché},
	volume = {3},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_2_1838},
	doi = {10.3406/pomap.1985.1838},
	abstract = {Cet article vise à structurer la problématique économique et politique de l'interface entre l'entreprise publique et le marché, qui s'est considérablement développée à la suite des nationalisations récentes. Il débute par une analyse des difficultés croissantes que rencontrent la quasi totalité des peuples de la terre pour créer et pour stocker de la richesse face à la dynamique implacable et globale à laquelle est aujourd'hui soumise la valeur marchande. Il analyse ensuite le modèle hybride que la France expérimente et qui tente de combiner efficacement le dynamisme espéré du marché avec la rationalité supposée d'une régulation systématique et volontariste. Dans ce cadre l'entreprise publique subit la dynamique du marché des biens et services pour ses flux (fournitures et ventes), mais elle y échappe pour sa structure qui n'est vraiment soumise ni au marché financier, ni au marché du travail. En conséquence l'auteur conclut que la logique profonde du secteur public se situe hors du marché. Pourtant, tant qu'il fournira le modèle de référence, l'entreprise publique sera d'autant plus légitime qu'elle y sera immergée. De la même façon son «autonomie de gestion» sera d'autant plus justifiée qu'elle sera confrontée aux différents marchés.},
	language = {fr},
	number = {2},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Ruffat, Jean},
	year = {1985},
	pages = {99--114},
}

@article{anastassopoulos_les_1985,
	title = {Les entreprises publiques entre l'autonomie et la dépendance : une analyse des divers instruments de régulation des entreprises publiques par l'{Etat}},
	volume = {3},
	issn = {0758-1726},
	shorttitle = {Les entreprises publiques entre l'autonomie et la dépendance},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_2_1837},
	doi = {10.3406/pomap.1985.1837},
	abstract = {Les relations entre l'entreprise publique et l'Etat sont marquées, dans quelque pays ou contexte que ce soit, par une DIALECTIQUE opposant, d'une part, les objectifs et les stratégies poursuivies par la première, et de l'autre les politiques nationales poursuivies par le second, pour lequel l'entreprise n'est qu'un instrument. Cette dialectique se manifeste à TROIS NIVEAUX : le niveau rationnel-économique d'abord, où s'expriment les conflits de fond entre ce qui est bon pour l'entreprise et ce qui est bon pour l'Etat ; le niveau organisationnel ensuite, où ces conflits se doublent de toutes les guerres de procédures et de pouvoir qui se développent entre l'entreprise et les multiples tutelles, incoordonnées autant qu'envahissantes, représentant concrètement l'Etat ; le niveau politique enfin, où l'arbitrage des oppositions précédentes est fait en dernière instance par des individus, des ministres ou présidents, mus par des motivations personnelles fort éloignées de la rationalité économique. Pour conjuguer, dans l'entreprise, efficience et service de l'intérêt général, il faut améliorer la relation avec l'Etat à ces trois niveaux. Au premier d'entre eux, l'Etat doit fixer les objectifs généraux de l'entreprise et approuver le plan stratégique qu'elle lui soumet, sans intervenir ensuite dans sa gestion. Au niveau organisationnel, la tutelle devrait être unique et le contrôle a posteriori revêtir un caractère stratégique. Au niveau politique, l'interaction devrait se limiter à des engagements publics réciproques à moyen terme du ministre et du chef d'entreprise, à l'exclusion de toute manifestation d'autorité partisane et/ou trop ponctuelle. Dans cette perspective, les «contrats de plan» sont un instrument utile, à condition qu'ils soient opérationnels aux trois niveaux.},
	language = {fr},
	number = {2},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Anastassopoulos, Jean-Pierre},
	year = {1985},
	pages = {73--98},
}

