}

@article{palier_reference_1998,
	title = {La référence au territoire dans les nouvelles politiques sociales},
	volume = {16},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1998_num_16_3_2196},
	doi = {10.3406/pomap.1998.2196},
	abstract = {Dans les nouvelles politiques sociales d'insertion mises en place au cours des années 1980 (politique de la ville, ZEP, politiques d'insertion professionnelle, RMI...), le territoire apparaît explicitement comme la référence centrale, depuis la conception jusqu'à la mise en œuvre de ces nouvelles formes d'intervention sociale. Ce texte analyse précisément cette référence au territoire pour savoir si cette re-territorialisation des politiques sociales correspond à un retour à l'assistance ou bien à l'émergence d'une nouvelle forme de citoyenneté sociale. Après avoir rappelé les oppositions traditionnelles entre l'assistance et l'assurance sociale, ce texte étudie les conditions d'émergence des nouvelles politiques sociales. Il montre qu'elles ont été élaborées en opposition au caractère catégoriel et sectoriel des politiques de protection sociale traditionnelles (Sécurité sociale) et qu'elles font appel au nouveau répertoire d'action publique, non spécifique au domaine social, qui s'élabore dans les années 1980. L'examen des nombreuses évaluations de la mise en œuvre de ces nouvelles politiques sociales, et notamment de leur efficacité en matière d'insertion, permet de conclure que si ces politiques ne sont pas un retour pur et simple aux pratiques assistancielles, elles ne parviennent pas à élaborer de nouvelles normes universelles de citoyenneté sociale, mais contribuent plutôt à une dualisation sociale en rapprochant progressivement le système français de protection sociale du régime propre aux systèmes anglo-saxons.},
	language = {fr},
	number = {3},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Palier, Bruno},
	year = {1998},
	pages = {13--41},
}

@article{hassenteufel_introduction_1998,
