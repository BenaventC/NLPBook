@article{e_ashford_les_1985,
	title = {Les aspects politiques des politiques de solidarité sociale},
	volume = {3},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_1_1819},
	doi = {10.3406/pomap.1985.1819},
	abstract = {Il est impossible de saisir par des modèles économiques et sociaux toute la complexité de l'élaboration d'une politique dans le cadre actuel de l'Etat, marqué par la solidarité sociale. On a négligé les problèmes politiques posés par la solidarité sociale, en grande partie parce qu'on s'est refusé à considérer, sous un angle comparatif, les dilemmes et problèmes particuliers que soulève l'élaboration d'une politique dans le domaine de la solidarité sociale. Si on situe le développement de cette solidarité dans une perspective historique, on constate que la façon dont les premières mesures et les premiers programmes ont été justifiés, conçus et mis en œuvre, a eu des effets durables sur la manière dont les services de solidarité sociale sont assurés. Afin d'illustrer les très grandes différences que l'on constate dans l'évolution des diverses nations, on compare la manière dont certains services sociaux locaux sont fournis dans trois pays (services sociaux personnels en Grande-Bretagne ; aide sociale en France ; centres de soins communautaires aux Etats-Unis). Dans chaque cas, nous avons trouvé que la façon dont les mesures ont été adoptées s'est conformée aux données territoriales et à la politique budgétaire qui caractérisent chaque système. Malgré leur immense importance dans la vie politique de toutes les démocraties modernes, les aspects politiques de la solidarité sociale sont liés aux circonstances historiques, constitutionnelles et politiques plus générales qui ont modelé chaque démocratie.},
	language = {fr},
	number = {1},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {E. Ashford, Douglas},
	year = {1985},
	pages = {107--133},
}

@article{hayward_instruments_1985,
	title = {Instruments de mise en œuvre des politiques gouvernementales et relations centre-périphérie en {Grande}-{Bretagne} et en {France}},
	volume = {3},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_1_1818},
	doi = {10.3406/pomap.1985.1818},
	abstract = {Dans cet article relatif à la phase ultime du processus politique, les auteurs étudient les changements intervenus dans le type d'instruments utilisés par les gouvernements centraux pour la mise en oeuvre de leurs politiques ; sont examinées les raisons pour lesquelles ces gouvernements tendent à privilégier des instruments de plus ou moins forte contrainte ainsi que les conséquences de l'utilisation de combinaisons différentes de tels moyens. L'emploi de plus en plus fréquent de procédures de type contractuel en France est ainsi opposé au développement d'interventions de nature réglementaire en Grande-Bretagne ; les méthodes employées en matière de contrôle des dépenses locales entraînent certaines difficultés lors de la mise en oeuvre de la politique du gouvernement britannique, alors que l'utilisation d'instruments de moindre contrainte semble, en France, devoir favoriser une meilleure coordination des priorités définies aux niveaux local et central. L'hypothèse selon laquelle existerait une tendance générale à l'utilisation d'instruments plus contraignants dans les sociétés industrielles ne peut être confirmée. Pour conclure, les auteurs soulignent que si les instruments hérités du passé sont parfois adaptés et utilisés avec plus de vigueur qu'auparavant pour l'application de mesures nouvelles, aucun instrument nouveau de contrainte n'est mis en place dans le cadre de politiques traditionnelles.},
	language = {fr},
	number = {1},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Hayward, Jack and Page, Edward},
	year = {1985},
	pages = {81--105},
}

@article{rose_responsabilite_1985,
	title = {La responsabilité devant les électeurs et devant le marché : les choix offerts aux organisations publiques},
	volume = {3},
	issn = {0758-1726},
	shorttitle = {La responsabilité devant les électeurs et devant le marché},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_1_1816},
	doi = {10.3406/pomap.1985.1816},
	abstract = {Comment les organisations publiques peuvent-elles doser de façon convenable leur responsabilité devant les électeurs et leur responsabilité devant le marché ? La première partie examine les différences dans la responsabilité à l'égard du marché et à l'égard des électeurs que présentent, au sein du secteur public, des organisations gérant divers types de programme. En second lieu, on étudie les implications politiques d'une responsabilité imparfaite dans les deux sphères. Si on teste les effets des différences dans la responsabilité des organisations sur la croissance des programmes publics, on découvre que les organisations responsables devant le marché et devant les électeurs se développent beaucoup moins vite que les organisations qui ne subissent que les pressions des producteurs et des spécialistes. La dernière partie expose les principes d'une affectation marginale des ressources entre des organisations ayant des responsabilités de type différent, dans le cadre des contraintes budgétaires très strictes qui caractérisent les années quatre-vingts. La combinaison des démarches fondées sur les électeurs et sur le marché peut améliorer la répartition budgétaire et la justice sociale.},
	language = {fr},
	number = {1},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Rose, Richard},
	year = {1985},
	pages = {49--77},
}

@article{laufer_gouvernabilite_1985,
	title = {Gouvernabilité et management des systèmes administratifs complexes},
	volume = {3},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1985_num_3_1_1815},
	doi = {10.3406/pomap.1985.1815},
	abstract = {Gouverner, c'est diriger à la façon dont on dirige une embarcation à l'aide d'un gouvernail. Pour gouverner, il faut disposer d'un savoir relatif à la carte de l'océan et au fonctionnement du bateau. Il faut également disposer d'une autorité reconnue. La possibilité du gouvernement d'un système administratif dépend donc de la question de la légitimité du savoir, de la question de la légitimité de l'autorité et de la façon dont est réalisée l'articulation entre savoir et autorité au sein de ce système. Une définition précise de la notion de légitimité permet de retracer l'histoire de la légitimité du libéralisme. Elle permet de constater que la crise du fondement de l'autorité légitime (crise du droit) et que la crise du savoir légitime (crise de la science) correspondent à l'émergence de systèmes administratifs complexes. Ces systèmes sont caractérisés par le fait qu'ils sont directement confrontés au problème de l'articulation entre le local et le global. Il est montré que le management ne porte pas à lui seul la solution aux problèmes des systèmes administratifs complexes. Toutefois, du fait que les systèmes administratifs deviennent complexes, ils ne peuvent plus ignorer le management dans leur fonctionnement quel que soit leur statut juridique.},
	language = {fr},
	number = {1},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Laufer, Romain},
	year = {1985},
	pages = {25--48},
}

