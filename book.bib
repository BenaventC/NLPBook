}

@article{mignot-gerard_gouvernement_2012,
	title = {Le gouvernement d’une université face aux « {Initiatives} d’{Excellence} » : réactivité et micro-résistances},
	volume = {29},
	issn = {0758-1726},
	shorttitle = {Le gouvernement d’une université face aux « {Initiatives} d’{Excellence} »},
