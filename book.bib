	journal = {Politiques et management public},
	author = {Gusmao, Regina and Charvolin, Florian},
	year = {1995},
	pages = {59--82},
}

@article{balme_europe_1995,
	title = {L'{Europe} en région : les fonds structurels et la régionalisation de l'action publique en {France} métropolitaine},
	volume = {13},
	issn = {0758-1726},
	shorttitle = {L'{Europe} en région},
