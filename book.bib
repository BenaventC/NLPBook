@article{menerault_territoire_1995,
	title = {Le territoire de gestion de la voirie urbaine en {France} : entre intercommunalité et supra-communalité},
	volume = {13},
	issn = {0758-1726},
	shorttitle = {Le territoire de gestion de la voirie urbaine en {France}},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1995_num_13_4_2079},
	doi = {10.3406/pomap.1995.2079},
	abstract = {La comparaison des territoires de gestion des réseaux de transports publics urbains et de la voirie met en relief de singulières différences. Alors que les premiers se sont développés dans le cadre d'organisations intercommunales étendues à l'échelle des agglomérations, les seconds sont souvent restés de compétence municipale, alors même qu'ils constituent le plus sûr ferment d'unité du territoire urbain. Cet apparent paradoxe amène à s'interroger sur les raisons de la faiblesse de l'intercommunalité en matière de voirie. L 'hypothèse soutenue dans ce texte s'appuie sur l'existence et la prégnance d'un territoire supra-communal, support de l'action des services de l'Équipement (la subdivision) et concurrent du territoire intercommunal pour la gestion de la voirie des villes. Les caractéristiques de ce cadre supra-communal (maillage, hiérarchie, centrante, constitution) l'opposent directement aux modalités de formation du territoire intercommunal. Sa pérennité pose plusieurs interrogations : quelle relation l'espace de la subdivision entretient-il aujourd'hui avec celui de l'agglomération alors même que leur construction est ancienne et qu'elles ont été formées pour répondre aux besoins d'une France dominée par le monde rural ? Quelle est la part des collectivités urbaines qui confient aujourd'hui encore leur réseau viaire aux subdivisions de l'Équipement ? Pourquoi et par quels mécanismes la subdivision se trouve-t-elle souvent mieux placée pour assurer la gestion de la voirie qu'un organisme intercommunal d'agglomération ? Ces interrogations renvoient, d'une part, à l'étude des processus de territorialisation des services de l'État à travers leur double composante historique et géographique et, d'autre part, à l'analyse de la force d'un modèle de diffusion "en réseau" d'un savoir- faire spécifique, élaboré au sein des services de l'Équipement, qui repose sur l'adaptation au milieu urbain de techniques développées antérieurement à d'autres échelles géographiques (l'exemple de la diffusion de la doctrine appliquée en matière d'entretien routier est abordé dans ce texte).},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Menerault, Philippe},
	year = {1995},
	pages = {131--159},
}

@article{turgeon_les_1995,
	title = {Les plans régionaux d'organisation de services de santé et sociaux au {Québec} : un dispositif de mise en cohérence de l'action publique ?},
	volume = {13},
	issn = {0758-1726},
	shorttitle = {Les plans régionaux d'organisation de services de santé et sociaux au {Québec}},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1995_num_13_4_2078},
	doi = {10.3406/pomap.1995.2078},
	abstract = {Les débats entourant la réforme des systèmes de santé des pays de l'OCDE suggèrent que trois arrangements emblématiques de mise en cohérence de l'action publique retiennent l'attention : la coordination par le marché privé et les quasi-marchés, la coordination par les hiérarchies et, enfin, la coordination par la décentralisation au niveau régional. Relativement à ce dernier type d'arrangement, le cas des plans régionaux d'organisation de services (PROS) en santé mentale au Québec a été étudié. L'analyse des processus d'émergence, de formulation et d'adoption de ces PROS permet de constater : 1) que ces PROS sont loin d'être l'exercice de rationalisation et de réallocation intrarégionale que le ministère de la Santé et des Services sociaux du Québec avait prévu ; 2) qu'il s'agit généralement d'exercices servant à revendiquer l'ajout de nouvelles ressources ; 3) que ces plans définissent les rapports conventionnels gouvernant les relations entre l'administration québécoise et l'organisation régionale d'une part, et celles entre la régie régionale et sa collectivité d'autre part ; 4) que de tels rapports engendrent des équilibres instables, compte tenu du fait que les régies reçoivent la totalité de leurs ressources financières de l'administration québécoise. Dès lors, il est tentant pour l'organisme régional de revendiquer toujours plus de ressources puisqu'il n'a pas à se soucier de leur financement. Il faut donc trouver rapidement des modes de responsabilisation "intermédiaires" qui assureraient que les instances régionales et leurs partenaires se préoccupent non seulement de la santé de leur population locale respective, ce qui est tout à fait légitime, mais également de la capacité de payer des citoyens et citoyennes de l'ensemble du Québec.},
	language = {fr},
	number = {4},
	urldate = {2020-06-26},
	journal = {Politiques et management public},
	author = {Turgeon, Jean and Landry, Réjean},
	year = {1995},
	pages = {115--130},
}

