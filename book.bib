@article{le_pen_evaluation_1983-1,
	title = {Une évaluation du coût des politiques de création d'emplois publics},
	volume = {1},
	issn = {0758-1726},
	url = {http://www.persee.fr/web/revues/home/prescript/article/pomap_0758-1726_1983_num_1_1_1706},
	doi = {10.3406/pomap.1983.1706},
	abstract = {Cet article est une tentative d'évaluer, théoriquement et empiriquement, l'effet économique d'une politique publique de stabilisation par l'emploi public. En utilisant le cadre théorique de Bacon et Eltis qui renvoient le problème économique du monde occidental aux dépenses excessives des administrations publiques et suite à leur division de l'économie en un secteur productif et un secteur improductif, nous montrons qu'un déplacement de l'emploi public implique un double coût pour le secteur productif : un "coût financier" égal aux ressources absorbées de façon improductive et un coût "réel" correspondant au coût d'opportunité de la valeur non générée dans les secteurs productifs par les travailleurs transférés. Néanmoins, la mesure empirique de ces deux coûts pour les années 1969-1978 en France, montre que cette charge n'est pas susceptible d'être responsable du ralentissement de la croissance économique, au moins à court terme : le coût financier est en effet très inférieur au "coût apparent" (salaires) de l'emploi public puisque les agents publics assument une part de leur propre financement. De plus, dans une situation d'offre excédentaire sur le marché du travail, le coût d'opportunité tend à diminuer à un niveau proche de zéro.},
	language = {fr},
	number = {1},
	urldate = {2020-06-24},
	journal = {Politiques et management public},
	author = {Le Pen, Claude},
	year = {1983},
	pages = {25--47},
}

@article{anastassopoulos_entreprises_1983-1,
	title = {Entreprises publiques et développement},
