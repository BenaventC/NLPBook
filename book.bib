	journal = {Politiques et management public},
	author = {Munoz, Jorge},
	year = {2006},
	pages = {145--160},
}

@article{baumgartner_etablissements_2006,
	title = {Etablissements universitaires : changements institutionnels et approche client. {Quelle} pertinence ?},
