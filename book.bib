	journal = {Politiques et management public},
	author = {Honta, Marina},
	year = {2001},
	pages = {65--91},
}

@article{chomienne_contours_2001,
	title = {Contours et limites de la responsabilité managériale des acteurs dans les organisations administratives publiques : le cas de l'informatisation de services du ministère de l'{Equipement}},
