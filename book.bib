@article{havard_mise_2016,
	title = {La mise en place d’une organisation polaire au sein d'un centre hospitalier : une approche par l'effectivité},
	volume = {2},
	abstract = {Cet article traite de la mise en place de l'organisation polaire dans les établissements fran- çais hospitaliers à la fin des années 2000. Cette réforme structurelle initiée par les pouvoirs publics a fait l'objet de plusieurs rapports institutionnels révélant une atteinte partielle des objectifs. Nous montrons, en nous appuyant sur une approche par l'effectivité, qu'au-delà de l'atteinte partielle des objectifs, il est nécessaire de mettre en lumière les processus qui ont contribué à la mise en œuvre de cette réforme. Cette analyse des processus est menée à partir d'un exemple de centre hospitalier universitaire ayant instauré une organisation par pôles préalablement et consécutivement à la réforme instiguée par l'État. Il en ressort que cette « réforme polaire » doit davantage être considérée comme une histoire en construc- tion qui rend possible d'autres réformes futures.},
